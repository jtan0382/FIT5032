<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MHealth</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<body>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <a class="navbar-brand ml-3" asp-area="" asp-controller="Home" asp-action="Index">MHealth</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between px-5">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Find A Clinic</a>
                </li>
                <li class="nav-item dropdown" >
                    <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Services
                    </a>
                    <ul class="dropdown-menu">
                        <a class="dropdown-item text-dark " asp-area="" asp-controller="Home" asp-action="Index">MRI</a>
                    </ul>
                </li>
                <li>@Html.ActionLink("About", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
            </ul>
            @if (User.Identity.IsAuthenticated)
            {
                if (User.IsInRole("admin"))
                {
                    <ul class="navbar-nav">
                        <li class="nav-item">
                        <a class="nav-link" href="/Admin/Index">Dashboard</a>
                    </li>
                    </ul>
                }
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/User/Logout">LogOut</a>
                    </li>
                </ul>
            } 
            else
            {
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/User/Login">Login</a>
                    </li>
                </ul>
            }
        </div>
    </nav>

